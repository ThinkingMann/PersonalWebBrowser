<UserControl x:Class="WpfBrowser.Controls.Main.ucTabbers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfBrowser.Controls.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Row 0: ComboBox to show TabGroups (We will think TabGroups as Browser Windows. Each window as a tab group) -->
        <ComboBox x:Name="cmbTabGroups" Margin="2,2,0,2" Height="25" />

        <!-- Row 1: ListBox to show Tabs' names (Each tab is a web page) (This design targetted to be changed in the future. A better display is desired for tabs) -->
        <ListBox x:Name="lstTabs" Grid.Row="1" Margin="2,0,0,2" />
    </Grid>
</UserControl>
