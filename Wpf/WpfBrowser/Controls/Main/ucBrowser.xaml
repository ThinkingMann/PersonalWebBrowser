<UserControl x:Class="WpfBrowser.Controls.Main.ucBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfBrowser.Controls.Main"
             xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             xmlns:browser="clr-namespace:PWB_UserControls.Browser;assembly=PWB_UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <browser:ucAddressBar x:Name="abTargetAddress"
                              SecureImageSource="/Assets/TopBarIcons/icons8-circular-arrow-pointing-to-left-64.png"
                              ReloadImageSource="/Assets/TopBarIcons/icons8-loop-left-rotation-64.png"
                              TargetAddressChanged="abTargetAddress_TargetAddressChanged"
                              />
        
        <cef:ChromiumWebBrowser x:Name="cwbBrowser" Grid.Row="1" 
                                Initialized="cwbBrowser_Initialized"
                                Margin="0,2,0,0" />
    </Grid>
</UserControl>
